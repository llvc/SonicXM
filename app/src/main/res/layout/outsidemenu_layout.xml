<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/nav_bg">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="@dimen/outside_width"
        android:layout_height="match_parent"
        android:visibility="visible"></LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/signin_topbar_height"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/navigation"
            android:id="@+id/textView20"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white_gray" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center">

            <ImageButton
                android:layout_width="@dimen/avatar_size"
                android:layout_height="@dimen/avatar_size"
                android:id="@+id/avatar"
                android:background="@drawable/avatar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="John Smith"
                android:id="@+id/fullnameNavTextView"
                android:layout_marginTop="@dimen/name_nav_gap"
                android:gravity="center"
                android:textColor="@color/white_gray" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/geo_icon_height"
                android:layout_marginTop="@dimen/name_nav_gap"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/geo_icon_width"
                    android:layout_height="@dimen/geo_icon_height"
                    android:id="@+id/imageView2"
                    android:layout_marginRight="@dimen/geo_icon_right_margin"
                    android:background="@drawable/geo_pin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="San Francisco"
                    android:id="@+id/textView21"
                    android:gravity="center"
                    android:textColor="@color/white_gray" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/separator_height"
            android:background="@color/nav_seperator"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:paddingTop="@dimen/nav_middle_space"
            android:paddingBottom="@dimen/nav_middle_space"
            android:paddingRight="@dimen/nav_middle_space">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="@dimen/nav_icon_size"
                    android:layout_height="@dimen/nav_icon_size"
                    android:id="@+id/imageView3"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/dashboard_icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/dashboard"
                    android:id="@+id/dashboardTextView"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/nav_menu_left_space"
                    android:textColor="@color/white_gray" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="@dimen/nav_icon_size"
                    android:layout_height="@dimen/nav_icon_size"
                    android:id="@+id/imageView4"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/activity_icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/activity"
                    android:id="@+id/textView23"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/nav_menu_left_space"
                    android:textColor="@color/white_gray" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="@dimen/nav_icon_size"
                    android:layout_height="@dimen/nav_icon_size"
                    android:id="@+id/imageView5"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/notification_icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/notifications"
                    android:id="@+id/textView24"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/nav_menu_left_space"
                    android:textColor="@color/white_gray" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="@dimen/nav_icon_size"
                    android:layout_height="@dimen/nav_icon_size"
                    android:background="@drawable/counter"
                    android:layout_gravity="center_vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="1"
                        android:id="@+id/textView29"
                        android:gravity="center"
                        android:textColor="@color/white_gray"
                        android:layout_gravity="center" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="@dimen/nav_icon_size"
                    android:layout_height="@dimen/nav_icon_size"
                    android:id="@+id/imageView6"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/message_icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/messages"
                    android:id="@+id/textView25"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/nav_menu_left_space"
                    android:textColor="@color/white_gray" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="@dimen/nav_icon_size"
                    android:layout_height="@dimen/nav_icon_size"
                    android:background="@drawable/counter"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="7"
                        android:id="@+id/textView28"
                        android:gravity="center"
                        android:textColor="@color/white_gray"
                        android:layout_gravity="center" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="@dimen/nav_icon_size"
                    android:layout_height="@dimen/nav_icon_size"
                    android:id="@+id/imageView7"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/profile_icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/profile"
                    android:id="@+id/profileTextView"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/nav_menu_left_space"
                    android:textColor="@color/white_gray" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="@dimen/nav_icon_size"
                    android:layout_height="@dimen/nav_icon_size"
                    android:id="@+id/imageView8"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/invite_icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/invite_friend"
                    android:id="@+id/textView27"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/nav_menu_left_space"
                    android:textColor="@color/white_gray" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/separator_height"
            android:background="@color/nav_seperator" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <ImageView
                    android:layout_width="@dimen/nav_icon_size"
                    android:layout_height="@dimen/nav_icon_size"
                    android:id="@+id/imageView9"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/logout_icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/logout"
                    android:id="@+id/logoutTextView"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/nav_menu_left_space"
                    android:textColor="@color/white_gray" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
